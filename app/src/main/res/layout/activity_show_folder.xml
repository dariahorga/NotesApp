<!-- res/layout/activity_folder.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView pentru afișarea listei de foldere -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foldersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:nestedScrollingEnabled="false" />

    <!-- FloatingActionButton pentru adăugarea unui nou folder -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_create_new_folder_24"
        android:tint="@android:color/white"
        android:backgroundTint="@color/purple" />
</RelativeLayout>
